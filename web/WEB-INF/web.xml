<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>
            login.jsp
        </welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>AutenticacaoFilter</filter-name>
        <filter-class>br.com.asfecer.filter.AutenticacaoFilter</filter-class>
    </filter>
    <filter>
        <filter-name>TempoRequisicao</filter-name>
        <filter-class>br.com.asfecer.filter.TempoRequisicaoFilter</filter-class>
    </filter>
    <filter>
        <filter-name>TratamentoErroFilter</filter-name>
        <filter-class>br.com.asfecer.filter.TratamentoErroFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>TratamentoErroFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>TempoRequisicao</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AutenticacaoFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>loginController</servlet-name>
        <servlet-class>br.com.asfecer.controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ClienteController</servlet-name>
        <servlet-class>br.com.asfecer.controller.PacienteController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>usuarioController</servlet-name>
        <servlet-class>br.com.asfecer.controller.UsuarioControllerOLD</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClienteController</servlet-name>
        <url-pattern>/cadPaciente</url-pattern>
        <url-pattern>/listPaciente</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>usuarioController</servlet-name>
        <url-pattern>/criaUser</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
